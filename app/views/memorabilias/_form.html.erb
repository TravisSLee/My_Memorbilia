<% if @memorabilia.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@memorabilia.errors.count, "error") %> prohibited this memorabilia from being saved:</h2>
    <ul>
      <% @memorabilia.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@memorabilia) do |f| %>
  <%= f.label :item_type %>
  <%= f.text_field :item_type %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>
  <%= f.label :autographed %>
  <%= f.check_box :autographed %>
  <br>
  <% if params[:athlete_id] %>
        <%= f.hidden_field :athlete_id %>
    <% else %>
        <%= select_tag 'memorabilia[athlete_id]', options_from_collection_for_select(Athlete.all, :id, :name), :include_blank => true %>
        <h4>Athlete Info: </h4>
        <p> Create a new one <br><br>
        <%= f.fields_for :athlete, @athlete do |ath| %>
            <%= ath.text_field :name, placeholder: "Name" %>
            <%= ath.text_field :team, placeholder: "Team" %>
            <%= ath.label :active %>
            <%= ath.check_box :active %>
        <% end %></p>
    <% end %>
    <%= f.submit class: "btn btn-secondary btn-sm text-white" %>
<% end %>
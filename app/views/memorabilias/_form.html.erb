<%= form_for(@memorabilia) do |f| %>
  <%= f.label :item_type %>
  <%= f.text_field :item_type %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :autographed %>
  <%= f.check_box :autographed %>
  <br>
  <p>Fill out the athlete below!<p>
  <%= f.fields_for :athlete do |ath| %>
    
    <%= ath.label :name %>  
    <%= ath.text_field :name %>
    <%= ath.label :team %>
    <%= ath.text_field :team %>
    <%= ath.label :active %>
    <%= ath.check_box :active %>
  <% end %>
  <%= f.submit %>
<% end %>
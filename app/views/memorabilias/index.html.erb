<% if @athlete %>
    <h2>Here's the memorabilia you have of <%= @athlete.name %></h2>
<% else %>
    <h2>Here these are what you have in your collection!!</h2>
<% end %>

<% if @memorabilias.nil? %>
<h3>Please record your Memorabilia now!!</h3>
<% else %>
    <ul>
    <% @memorabilias.each do |m|%>
        <%= link_to "#{m.athlete.name}\'s #{m.item_type}", athlete_memorabilia_path(m.athlete, m) %>
        <%= link_to 'Edit', edit_athlete_memorabilia_path(m.athlete, m) %><br>
    <% end %>
    </ul>
<% end %>
<% if @athlete %>
    <%= link_to 'New Memorabilia', new_athlete_memorabilia_path(@athlete) %>
<% else %>
    <%= link_to 'New Memorabilia', new_memorabilia_path %>
    <%= link_to 'Expensive Memorabilias', '/memorabilias/search_term/expensive' %>
<% end %>

